{
  "name": "env-spec-language",
  "displayName": "@env-spec (.env) language support",
  "description": "Adds syntax highlighting and additional tooling for @env-spec enabled .env files",
  "icon": "images/marketplace-icon.png",
  "galleryBanner": {
    "color": "#4F0049",
    "theme": "dark"
  },
  "version": "0.0.0",
  "publisher": "varlock",
  "author": "dmno-dev",
  "license": "MIT",
  "homepage": "https://varlock.dev/env-spec",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmno-dev/varlock.git",
    "directory": "packages/vscode-plugin"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "env-spec",
        "aliases": [
          "env-spec",
          "dotenv",
          ".env"
        ],
        "filenamePatterns": [
          ".env",
          ".env.*"
        ],
        "configuration": "./language/language-configuration.json",
        "icon": {
          "light": "images/file-icon.png",
          "dark": "images/file-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "env-spec",
        "scopeName": "source.env-spec",
        "path": "./language/env-spec.tmLanguage.json"
      }
    ]
  },
  "categories": ["Programming Languages", "Other"],
  "keywords": ["env-spec", "dotenv", "env", ".env", "environment variables", "config"],
  "pricing": "Free",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "package": "pnpm run build && vsce package",
    "install-locally": "code --install-extension",
    "publish:prerelease": "vsce publish --pre-release --no-git-tag-version --no-update-package-json"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/vscode": "^1.99.0",
    "tsup": "catalog:",
    "vsce": "^2.15.0"
  },
  "dependencies": {
  }
}
