---
import Layout from "../layouts/Layout.astro";
import { LinkButton } from "@astrojs/starlight/components";
---

<Layout title="404 - Page Not Found" showSearch={true} showSidebar={false}>
  <main>
    <div class="error-container">
      <img
        class="vortex"
        src="https://varlock-pixel-art.dmno.workers.dev/effects/black-hole.gif"
        alt="Black hole effect"
      />
      <h1>404</h1>

      <div class="error-content">
        <p class="error-message">
          The page you're looking for has vanished into the void!
        </p>
        <p class="error-description">
          Perhaps it never existed, or it has been banished to another
          dimension.
        </p>
      </div>
      <div class="button-container">
        <LinkButton href="/">Return Home</LinkButton>
        <LinkButton href="getting-started/introduction">
          Get Started
        </LinkButton>
      </div>
    </div>
  </main>
</Layout>

<style is:global>
  body {
    background-image: url(../assets/pixel-art/dungeon-bg.png);
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    image-rendering: pixelated;
  }
</style>

<style>
  h1 {
    font-size: 4rem;
    color: var(--brand-pink);
    margin-bottom: 8rem;
    padding-left: 0.5rem;
  }
  .error-container {
    text-align: center;
    margin-top: 2rem;
  }

  .vortex {
    display: inline-block;
    position: absolute;

    z-index: -1;
    scale: 4;
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
    width: 80px;
    margin-left: -40px;
    opacity: 0.7;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(-2px);
    }
    50% {
      transform: translateY(2px);
    }
  }
  .error-content {
    background: rgba(0, 0, 0, 0.8);
    padding: 2rem;
    margin: 0 auto;
    max-width: 800px;
    color: var(--brand-white);
  }
  .error-message {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }
  .error-description {
  }
</style>
