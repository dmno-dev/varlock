{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "customConditions": ["ts-src"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
