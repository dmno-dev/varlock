{
  "compilerOptions": {
    "target": "es2021",
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "customConditions": ["ts-src"],
    "lib": ["ES2022"],
    "module": "esnext"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
