---
import DefaultSocialIcons from "@astrojs/starlight/components/SocialIcons.astro";
import StarArrow from "./StarArrow.vue";
---

<div class="custom-social-icons-wrapper">
  <a href="/blog/" class="blog-nav-link"><img src="https://varlock-pixel-art.dmno.workers.dev/icons/scroll.png" alt="" class="blog-nav-icon" /> Blog</a>
  <div class="star-arrow-header">
    <StarArrow client:load />
  </div>
  <DefaultSocialIcons><slot /></DefaultSocialIcons>
</div>

<style>
  .custom-social-icons-wrapper {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
  }
  .blog-nav-link {
    color: var(--sl-color-white);
    text-decoration: none;
    font-family: var(--font-pixel);
    font-size: 1rem;
    padding: 0.25rem 0;
    margin-right: 0.75rem;
    transition: color 0.2s;
    white-space: nowrap;
    border: none !important;
    outline: none;
    border-bottom: 2px solid transparent !important;
    display: inline-flex;
    align-items: center;
    gap: 0.3em;
  }
  .blog-nav-link:hover {
    color: var(--sl-color-text-accent);
    border-bottom: 2px dotted var(--sl-color-text-accent) !important;
  }
  .blog-nav-icon {
    height: 1.1em;
    width: auto;
    vertical-align: middle;
    image-rendering: pixelated;
    image-rendering: -moz-crisp-edges;
    image-rendering: crisp-edges;
    margin-right: 0.15em;
  }
  .star-arrow-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    /* Position the arrow above the icons for visibility */
    margin-bottom: -0.5rem;
  }
  @media (max-width: 600px) {
    .custom-social-icons-wrapper {
      flex-direction: row;
      align-items: center;
      gap: 0.3rem;
    }
    .star-arrow-header {
      margin-bottom: 0;
      margin-right: 0;
    }
  }
</style>
