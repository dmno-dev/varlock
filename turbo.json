{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [ ],
  "tasks": {
    "build": {
      "dependsOn": [ "^build" ],
      "inputs": [ "tsconfig.json", "tsconfig.*.json", "tsup.config.ts", "src/**" ],
      "outputs": [ "dist/**" ]
    },
    "dev": {
      "dependsOn": [ "db:local" ],
      "cache": false,
      "persistent": true
    },

    "lint": { }
  }
}
