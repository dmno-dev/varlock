# ======================
# Single-line decorators
# ======================

# @required
REQUIRED_VAR=test

# @sensitive @optional
MULTI_DEC=test

# @type=string
TYPED_VAR=test

# @example="foo bar"
EXAMPLE_VAR=test

# @default=someFn("arg")
DEC_FN_VAR=test

