  <LogoList title="Languages" logos={languagesLogos} theme="green" />
</div>

<style>
  .works-with-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin: 4rem 0;
  }

  @media (max-width: 768px) {
    .works-with-container {
      grid-template-columns: 1fr;
