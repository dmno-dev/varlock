{
  "$schema": "https://turbo.build/schema.json",
  "globalPassThroughEnv": [],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["package.json", "tsconfig.json", "tsconfig.*.json", "tsup.config.ts", "src/**"],
      "outputs": ["dist/**"]
    },
    "test:ci": {
      "dependsOn": ["^test:ci"],
      "inputs": ["package.json", "tsconfig.json", "tsconfig.*.json", "tsup.config.ts", "src/**", "test/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {}
  }
}
