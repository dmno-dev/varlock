{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "customConditions": ["ts-src"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
